{
  "manifest_version": 3,
  "name": "Chromagotchi",
  "version": "1.0",
  "description": "A productivity tool that motivates you with a digital pet!",
  "icons": {
    "16": "images/favicon-16x16.png",
    "32": "images/favicon-32x32.png",
    "180": "images/apple-touch-icon.png",
    "192": "images/android-chrome-192x192.png",
    "512": "images/android-chrome-512x512.png"
  },
  "permissions": ["storage", "activeTab", "contextMenus", "tabs"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/favicon-16x16.png",
      "32": "images/favicon-32x32.png"
    }
  },
  "web_accessible_resources": [
    {
      "resources": ["index.html", "popup.html"],
      "matches": ["<all_urls>"]
    }
  ]
}

